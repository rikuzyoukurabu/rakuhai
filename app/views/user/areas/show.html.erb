<h1>User::Areas#show</h1>
<p>Find me in app/views/user/areas/show.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="show-text">
        <table class ="table table-bordered">
          <thead>
            <tr style="text-align: center;">
              <th>写真</th>
              <th>トイレ名</th>
              <th>説明</th>
              <th>編集削除ボタン</th>
            </tr>
          </thead>
            <%= link_to "トイレ新規投稿", new_toilet_path, class:"header-button btn text-light" %>
          <tbody>
            <% @area.toilets.each do |toilet| %>
            <tr>
              <td><%= attachment_image_tag toilet,:image,format: 'jpeg', fallback: "new_toilet_image.jpg",size: "250x150",class: "image_box" %></td>
              <td><%= toilet.toilet_name %></td>
              <td><%= toilet.introduction %></td>
              <td><%= link_to "編集",edit_toilet_path(toilet),class: "btn btn-primary" %><br><br><br>
                  <%= link_to "削除",toilet_path(toilet),method: :delete ,class: "btn btn-danger" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
