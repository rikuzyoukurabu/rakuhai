<h1>User::Shops#show</h1>
<p>Find me in app/views/user/shops/show.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="new-post">
        <%= render 'user/toilets/errors' , object:@shop %>
        <h3 style="border-bottom: solid; border-bottom-color: #dcdcdc;">店詳細ページ</h3>
        <% if @user.id == current_user.id %>
          <div class="edit-button">
            <%= link_to "編集",edit_shop_path(@shop),class: "btn btn-primary btn-circle m-1" %>
            <%= link_to "削除",shop_path(@shop),method: :delete ,class: "btn btn-danger btn-circle m-1" %>
          </div>
        <% end %>
        <p id = "favorite_buttons_<%= @shop.id %>">
        <%= render 'user/shop_favorites/favorite' , shop: @shop %>
        </p>
        <%= render 'user/shop_reviews/form',shop: @shop, shop_review: @shop_review %>
          <table class="table table-bordered">
            <thead>
              <tr style="text-align: center;">
                <th>写真</th>
                <th>お店名</th>
              <th>説明</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= attachment_image_tag @shop,:image,format: 'jpeg', fallback: "new_toilet_image.jpg",size: "250x150",class: "image_box" %></td>
                <td><%= @shop.shop_name %></td>
                <td><%= @shop.introduction %></td>
              </tr>
            </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
          <div class="col-12">
            <div class="new-post">
              <div id="comments_area">
                <%= render "user/shop_comments/index",comments: @comments %>
              </div>
            <div>
              <%= form_with(model:[@shop, @shop_comment]) do |f| %>

                <%= f.label :画像, class: "form-label" %><br>
                <%= f.attachment_field :image %><br><br>

                <%= f.label :コメント, class: "form-label" %><br>
                <%= f.text_area :comment, class: "form-control",rows:'3',placeholder: "コメントをここに" %><br>
                <%= f.submit "コメントする" %>
              <% end %>
           </div>
         </div>
        </div>
      </div>
    </div>
