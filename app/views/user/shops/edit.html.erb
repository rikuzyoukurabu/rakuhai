<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="new-post">
        <%= form_with model: @shop, local:true do |f| %>
        <h3>お店新規投稿</h3>

          <%= f.label :画像, class: "form-label" %><br>
          <%= f.attachment_field :image %><br><br>

          <%= f.label :お店名, class: "form-label" %><br>
          <%= f.text_field :shop_name, class: "form-control", placeholder: "お店名を入力してください" %><br>

          <%= f.label :説明, class: "form-label" %><br>
          <%= f.text_field :introduction, class: "form-control", placeholder: "説明を入力してください"  %><br>

          <%= f.label :地域名, class: "form-label" %><br>
          <%= f.collection_select :area_id, Area.all, :id, :area_name, include_blank: "-- 選択してください --" %><br><br>
          <%= f.submit '保存', class: "btn btn-outline-dark" %>

          <% end %>
      </div>
    </div>
  </div>
</div>