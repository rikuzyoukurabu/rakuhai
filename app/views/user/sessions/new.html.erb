<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="user-login">
      <h2 class="mt-3">ログイン画面</h2>

      <%= form_with model: @user, url: new_user_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :email , class: "form-label"%><br />
          <%= f.email_field :email,class: "form-control" ,autofocus: true, autocomplete: "email" %><br>
        </div>

        <div class="field">
          <%= f.label :password ,class: "from-label"%><br />
          <%= f.password_field :password,class: "form-control", autocomplete: "current-password" %><br>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-success mt-3" %>
          <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class:"btn btn-primary mt-3 mx-4" %>
        </div>

      <!--<%= render "user/shared/links" %>-->
      <p style="margin: 20px 0 20px 0;">新規会員登録は<%= link_to "こちら", new_user_registration_path %></p>
      <% end %>
      </div>
    </div>
  </div>
</div>


