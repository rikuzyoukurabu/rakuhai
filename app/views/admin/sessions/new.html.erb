<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="mt-3">管理者ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email , class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true,class: "form-control", autocomplete: "email" %><br>
        </div>

        <div class="field">
          <%= f.label :password , class: "form-label" %><br />
          <%= f.password_field :password,class: "form-control", autocomplete: "current-password" %><br>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success mt-3 mb-3" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
